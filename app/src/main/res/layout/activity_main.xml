<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:contentDescription="@null"
        android:src="@drawable/selectfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_select_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/solid_8dc75f_coner_5dp"
        android:text="Select File"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_delete_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_image_select" />

    <Button
        android:id="@+id/btn_delete_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_8dc75f_coner_5dp"
        android:text="Delete Data"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_list_device"
        app:layout_constraintEnd_toEndOf="@id/btn_select_file"
        app:layout_constraintStart_toStartOf="@id/btn_select_file"
        app:layout_constraintTop_toBottomOf="@id/btn_select_file" />

    <Button
        android:id="@+id/btn_list_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_8dc75f_coner_5dp"
        android:text="List Of Devices"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_select_file"
        app:layout_constraintStart_toStartOf="@id/btn_select_file"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_data" />

</androidx.constraintlayout.widget.ConstraintLayout>